@model GPSMonitoreo.Web.ViewModels.AppLayoutSearchGrid
@{
	Layout = "_AppLayoutSearchGrid";
}
<script script-manager-add="layout" script-manager-key="init">

	layout.addGridInitializer(function() {

		var options = AppGrid2.getDefaultOptions();

		options.searchUrl = '@Model.PostUrl';
		options.showRowEditButton = true;
		options.rowEditMethod = function(id, row){
			App.authorization.roles.edit(id);
		};

		options.dataFields = [
			{ name: 'Id', type: 'number' },
			{ name: 'Description',type:'string'}
		];

		options.columns = [
			{ text: 'Cód. Int.', datafield: 'Id', width: '60px' },
			{ text: 'Descripción', datafield: 'Description', width: '200px' }
		];

		options.searchFilters = [
			[
				new AppGridFilter({
					label		: 'Descripción',
					widgetName	: 'jqxInput',
					labelWidth	: '100px',
					widgetWidth	: '200px',
					fieldName	: 'Description'
				})
			]
		];
		return options;
	});
</script>