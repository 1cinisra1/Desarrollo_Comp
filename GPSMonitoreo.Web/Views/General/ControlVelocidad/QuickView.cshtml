<script script-manager-add="quickView" script-manager-key="init">

	var $relacion_capacidades = $("#quickview_equipos_capacidades");
	var $relacion_capacidades_grid = $relacion_capacidades.find('>div').last().find('> div');
	

	$relacion_capacidades.jqxExpander({ width: '100%', expanded: false });
