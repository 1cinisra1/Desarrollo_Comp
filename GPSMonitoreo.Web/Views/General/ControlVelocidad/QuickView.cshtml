	relacion_capacidades_grid_options.$element = $relacion_capacidades_grid;
	relacion_capacidades_grid_options.height = '150px';

	relacion_capacidades_grid_options.datafields = [
	{ name: 'categoria_producto', type: 'string' },
	{ name: 'capacidad', type: 'string' },
	{ name: 'unidad', type: 'string' },
	{ name: 'valor', type: 'number' }
	];
	relacion_capacidades_grid_options.columns = [
		{ text: 'Categoria Producto', datafield: 'categoria_producto', width: '250px' },
		{ text: 'Capacidad', datafield: 'capacidad', width: '250px' },
		{ text: 'Unidad', datafield: 'unidad', width: '150px', cellsalign: 'left' },
		{ text: 'Valor', datafield: 'valor', width: 70, cellsalign: 'left' }
	];

	var relacion_capacidades_grid = new AppGrid(relacion_capacidades_grid_options);
	relacion_capacidades_grid.setLocalData(@Html.Raw(Details.relacion_capacidades.ToJsonString()));


