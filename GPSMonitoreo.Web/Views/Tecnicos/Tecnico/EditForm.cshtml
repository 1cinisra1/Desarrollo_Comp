<script script-manager-add="commonform" script-manager-key="form_init">
    layout.addFormInitializer(function (form) {
        var f = form.$form[0];

        form.add(f.elements.Alterno, 'jqxInput');
       // form.add(f.elements.Ids, 'jqxInput', { height: 23, width: 35 });
       

        form.add('#@(layoutModel.FormId)_jqxRadioButton', 'jqxRadioButton', { groupName: 'Panel1' });
        form.add('#@(layoutModel.FormId)_jqxRadioButton2', 'jqxRadioButton', { groupName: 'Panel1' });
        form.add('#@(layoutModel.FormId)_jqxRadioButton3', 'jqxRadioButton', { groupName: 'Panel1' });
        form.add('#@(layoutModel.FormId)_jqxRadioButton4', 'jqxRadioButton', { groupName: 'Panel2' });
        form.add('#@(layoutModel.FormId)_jqxRadioButton5', 'jqxRadioButton', { groupName: 'Panel2' });

        
        var ruta = form.addPicker('#@(layoutModel.FormId)_name', {}, function(){
            App.geographics.routes.windowSearch(function(item){
                ruta.val({ value: item.Id, label: item.Description });

            }, {closeOnSelect: true});
        });


        name.onChange = function() {
            cargarRuta(name.val());

        };



        function cargarRuta(ruta){
            if(ruta){

                App.get('/geografico/rutas/rutafases/' + rutaId + '/' + entidadId, function(response){
                    grid.base.source._source.localdata = response.records;

                    grid.base.host.jqxTreeGrid('updateBoundData');

                    var item = grid.getRows()[0];

                    grid.base.host.jqxTreeGrid('beginUpdate');

                    updateFaseApplicable(item, item.fase);

                    grid.base.host.jqxTreeGrid('endUpdate');
                });



            }else{
            }
        }



    });

</script>


