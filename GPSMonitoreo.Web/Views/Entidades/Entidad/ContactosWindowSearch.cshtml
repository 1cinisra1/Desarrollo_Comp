@{
	Layout = "WindowSearchLayout";
}

@section form{
<form style="padding: 5px">
	<input type="hidden" name="empresa" value="@ViewData["empresa"]" />
	<table class="jqx-wide">
		<tr>
			<td>Descripcion</td>
			<td><input type="text" name="descripcion" maxlength="100" /></td>
			<td>Apellidos:</td>
			<td style="width:150px"><input type="text" name="apellidos" maxlength="100"/></td>
			<td>Nombres:</td>			
			<td style="width:150px"><input type="text" name="nombres" maxlength="100"/></td>
		</tr>
	</table>
	<button type="button">Buscar</button>
</form>
}
<script script-manager-add="windowsearch" script-manager-key="form_init">
	form.add('input:text', 'jqxInput');
	form.addFormElement([form.formElement.elements.empresa]);
</script>